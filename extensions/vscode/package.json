{
  "name": "matterviz",
  "displayName": "MatterViz",
  "description": "Visualize crystal structures and MD trajectories in VSCode",
  "version": "0.1.5",
  "publisher": "janosh",
  "icon": "icon.png",
  "repository": "https://github.com/janosh/matterviz",
  "categories": [
    "Data Science",
    "Machine Learning",
    "Visualization",
    "Notebooks",
    "Education"
  ],
  "engines": {
    "vscode": "^1.96.0"
  },
  "main": "./dist/extension.cjs",
  "activationEvents": [
    "onFileSystem:*.xyz",
    "onFileSystem:*.cif",
    "onFileSystem:*.traj",
    "onFileSystem:*.h5",
    "onFileSystem:*.hdf5",
    "onFileSystem:*poscar*",
    "onFileSystem:*contcar*",
    "onFileSystem:*xdatcar*"
  ],
  "contributes": {
    "commands": [
      {
        "command": "matterviz.renderStructure",
        "title": "Render with MatterViz"
      }
    ],
    "keybindings": [
      {
        "command": "matterviz.renderStructure",
        "key": "ctrl+shift+v",
        "mac": "cmd+shift+v",
        "when": "matterviz.supportedResource"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "matterviz.renderStructure",
          "when": "matterviz.supportedResource"
        }
      ]
    },
    "customEditors": [
      {
        "viewType": "matterviz.viewer",
        "displayName": "MatterViz Viewer",
        "selector": [
          {
            "filenamePattern": "*.{traj,h5,hdf5,dcd,xtc,trr}"
          },
          {
            "filenamePattern": "*.{cif,xyz,extxyz,poscar,json,yaml,yml}.gz"
          },
          {
            "filenamePattern": "*{xdatcar,contcar,outcar}"
          },
          {
            "filenamePattern": "*{trajectory,relax,npt,nvt,nve}*"
          }
        ],
        "priority": "option"
      }
    ],
    "configuration": {
      "title": "MatterViz",
      "properties": {
        "matterviz.theme": {
          "type": "string",
          "enum": [
            "auto",
            "light",
            "dark",
            "white",
            "black"
          ],
          "default": "auto",
          "description": "Theme for MatterViz visualizations. 'auto' follows VSCode's theme."
        },
        "matterviz.auto_render": {
          "type": "boolean",
          "default": true,
          "description": "Automatically render supported file types (structures and trajectories) when opening them. If rendering fails, falls back to regular editor."
        },
        "matterviz.defaults.color_scheme": {
          "type": "string",
          "default": "Vesta",
          "description": "Color scheme for atoms and bonds",
          "enum": [
            "Vesta",
            "Jmol",
            "Alloy",
            "Pastel",
            "Muted",
            "Dark Mode"
          ]
        },
        "matterviz.defaults.background_color": {
          "type": "string",
          "default": "#000000",
          "description": "Background color of the 3D viewport"
        },
        "matterviz.defaults.background_opacity": {
          "type": "number",
          "default": 1,
          "description": "Opacity of the background (0.0 = transparent, 1.0 = opaque)",
          "minimum": 0,
          "maximum": 1
        },
        "matterviz.defaults.show_image_atoms": {
          "type": "boolean",
          "default": false,
          "description": "Show atoms outside the unit cell for better visualization"
        },
        "matterviz.defaults.show_gizmo": {
          "type": "boolean",
          "default": true,
          "description": "Show orientation gizmo in the corner"
        },
        "matterviz.defaults.structure.atom_radius": {
          "type": "number",
          "default": 1,
          "description": "Radius multiplier for atoms (1.0 = standard atomic radii)",
          "minimum": 0.1,
          "maximum": 3
        },
        "matterviz.defaults.structure.same_size_atoms": {
          "type": "boolean",
          "default": false,
          "description": "Render all atoms with the same size regardless of element"
        },
        "matterviz.defaults.structure.show_atoms": {
          "type": "boolean",
          "default": true,
          "description": "Display atoms in the structure"
        },
        "matterviz.defaults.structure.sphere_segments": {
          "type": "number",
          "default": 20,
          "description": "Number of segments for sphere rendering (higher = smoother)",
          "minimum": 8,
          "maximum": 64
        },
        "matterviz.defaults.structure.bond_thickness": {
          "type": "number",
          "default": 0.1,
          "description": "Thickness of bonds relative to atom radius",
          "minimum": 0.01,
          "maximum": 1
        },
        "matterviz.defaults.structure.show_bonds": {
          "type": "boolean",
          "default": false,
          "description": "Display bonds between atoms"
        },
        "matterviz.defaults.structure.bond_color": {
          "type": "string",
          "default": "#ffffff",
          "description": "Color for bonds (hex color code)"
        },
        "matterviz.defaults.structure.bonding_strategy": {
          "type": "string",
          "default": "nearest_neighbor",
          "description": "Method for determining bonds between atoms",
          "enum": [
            "nearest_neighbor",
            "covalent_radius",
            "distance_cutoff"
          ]
        },
        "matterviz.defaults.structure.camera_position": {
          "type": "array",
          "default": [
            0,
            0,
            0
          ],
          "description": "Initial camera position [x, y, z]",
          "minItems": 3,
          "maxItems": 3,
          "items": {
            "type": "number"
          }
        },
        "matterviz.defaults.structure.projection": {
          "type": "string",
          "default": "perspective",
          "description": "Camera projection type",
          "enum": [
            "perspective",
            "orthographic"
          ]
        },
        "matterviz.defaults.structure.fov": {
          "type": "number",
          "default": 75,
          "description": "Field of view in degrees for perspective projection",
          "minimum": 10,
          "maximum": 150
        },
        "matterviz.defaults.structure.rotation_damping": {
          "type": "number",
          "default": 0.1,
          "description": "Camera rotation damping factor (0 = no damping, 1 = heavy damping)",
          "minimum": 0,
          "maximum": 1
        },
        "matterviz.defaults.structure.zoom_speed": {
          "type": "number",
          "default": 0.5,
          "description": "Mouse wheel zoom sensitivity",
          "minimum": 0.1,
          "maximum": 2
        },
        "matterviz.defaults.structure.pan_speed": {
          "type": "number",
          "default": 0.5,
          "description": "Mouse pan sensitivity",
          "minimum": 0.1,
          "maximum": 2
        },
        "matterviz.defaults.structure.max_zoom": {
          "type": "string",
          "description": "Maximum zoom level (undefined = no limit)"
        },
        "matterviz.defaults.structure.min_zoom": {
          "type": "string",
          "description": "Minimum zoom level (undefined = no limit)"
        },
        "matterviz.defaults.structure.auto_rotate": {
          "type": "number",
          "default": 0,
          "description": "Automatic rotation speed (0 = disabled, positive = clockwise)",
          "minimum": 0,
          "maximum": 10
        },
        "matterviz.defaults.structure.show_site_labels": {
          "type": "boolean",
          "default": false,
          "description": "Show element labels on atoms"
        },
        "matterviz.defaults.structure.site_label_size": {
          "type": "number",
          "default": 12,
          "description": "Font size for atom labels",
          "minimum": 8,
          "maximum": 32
        },
        "matterviz.defaults.structure.site_label_color": {
          "type": "string",
          "default": "#ffffff",
          "description": "Text color for atom labels"
        },
        "matterviz.defaults.structure.site_label_bg_color": {
          "type": "string",
          "default": "#000000",
          "description": "Background color for atom labels"
        },
        "matterviz.defaults.structure.site_label_padding": {
          "type": "number",
          "default": 2,
          "description": "Padding around atom labels in pixels",
          "minimum": 0,
          "maximum": 20
        },
        "matterviz.defaults.structure.site_label_offset": {
          "type": "array",
          "default": [
            0,
            0,
            0
          ],
          "description": "3D offset for atom labels [x, y, z]",
          "minItems": 3,
          "maxItems": 3,
          "items": {
            "type": "number"
          }
        },
        "matterviz.defaults.structure.ambient_light": {
          "type": "number",
          "default": 0.4,
          "description": "Ambient light intensity (0 = dark, 1 = bright)",
          "minimum": 0,
          "maximum": 1
        },
        "matterviz.defaults.structure.directional_light": {
          "type": "number",
          "default": 0.6,
          "description": "Directional light intensity (0 = no shadows, 1 = strong shadows)",
          "minimum": 0,
          "maximum": 1
        },
        "matterviz.defaults.structure.show_force_vectors": {
          "type": "boolean",
          "default": false,
          "description": "Display force vectors on atoms"
        },
        "matterviz.defaults.structure.force_scale": {
          "type": "number",
          "default": 1,
          "description": "Scale factor for force vector arrows",
          "minimum": 0.1,
          "maximum": 10
        },
        "matterviz.defaults.structure.force_color": {
          "type": "string",
          "default": "#ff0000",
          "description": "Color for force vectors"
        },
        "matterviz.defaults.structure.show_lattice": {
          "type": "boolean",
          "default": false,
          "description": "Display unit cell lattice"
        },
        "matterviz.defaults.structure.show_vectors": {
          "type": "boolean",
          "default": false,
          "description": "Display lattice vectors"
        },
        "matterviz.defaults.structure.lattice_edge_opacity": {
          "type": "number",
          "default": 0.3,
          "description": "Opacity of lattice edge lines",
          "minimum": 0,
          "maximum": 1
        },
        "matterviz.defaults.structure.lattice_surface_opacity": {
          "type": "number",
          "default": 0.1,
          "description": "Opacity of lattice surfaces",
          "minimum": 0,
          "maximum": 1
        },
        "matterviz.defaults.structure.lattice_edge_color": {
          "type": "string",
          "default": "#808080",
          "description": "Color of lattice edges"
        },
        "matterviz.defaults.structure.lattice_surface_color": {
          "type": "string",
          "default": "#e0e0e0",
          "description": "Color of lattice surfaces"
        },
        "matterviz.defaults.trajectory.auto_play": {
          "type": "boolean",
          "default": false,
          "description": "Automatically start playing trajectory when opened"
        },
        "matterviz.defaults.trajectory.fps": {
          "type": "number",
          "default": 5,
          "description": "Frames per second for trajectory playback",
          "minimum": 0.1,
          "maximum": 60
        },
        "matterviz.defaults.trajectory.fps_range": {
          "type": "array",
          "default": [
            0.2,
            30
          ],
          "description": "Allowed range for playback speed [min, max]",
          "minItems": 2,
          "maxItems": 2,
          "items": {
            "type": "number"
          }
        },
        "matterviz.defaults.trajectory.display_mode": {
          "type": "string",
          "default": "structure+scatter",
          "description": "Visualization mode for trajectory data",
          "enum": [
            "structure+scatter",
            "structure",
            "scatter",
            "histogram",
            "structure+histogram"
          ]
        },
        "matterviz.defaults.trajectory.show_controls": {
          "type": "boolean",
          "default": true,
          "description": "Show playback controls"
        },
        "matterviz.defaults.trajectory.show_fullscreen_button": {
          "type": "boolean",
          "default": true,
          "description": "Show fullscreen toggle button"
        },
        "matterviz.defaults.trajectory.step_labels": {
          "type": "number",
          "default": 5,
          "description": "Number of frame labels to display",
          "minimum": 0,
          "maximum": 20
        },
        "matterviz.defaults.trajectory.layout": {
          "type": "string",
          "default": "auto",
          "description": "Layout arrangement for trajectory viewer",
          "enum": [
            "auto",
            "horizontal",
            "vertical"
          ]
        },
        "matterviz.defaults.trajectory.allow_file_drop": {
          "type": "boolean",
          "default": true,
          "description": "Allow drag-and-drop of trajectory files"
        },
        "matterviz.defaults.trajectory.array_buffer_threshold": {
          "type": "number",
          "default": 50000000,
          "description": "File size threshold for binary loading (bytes)",
          "minimum": 1000000,
          "maximum": 500000000
        },
        "matterviz.defaults.trajectory.str_threshold": {
          "type": "number",
          "default": 25000000,
          "description": "File size threshold for text loading (bytes)",
          "minimum": 500000,
          "maximum": 250000000
        },
        "matterviz.defaults.trajectory.use_indexing": {
          "type": "boolean",
          "default": false,
          "description": "Use frame indexing for large trajectories"
        },
        "matterviz.defaults.trajectory.chunk_size": {
          "type": "number",
          "default": 1000,
          "description": "Number of frames to process at once",
          "minimum": 10,
          "maximum": 10000
        },
        "matterviz.defaults.trajectory.histogram_mode": {
          "type": "string",
          "default": "overlay",
          "description": "Histogram display mode",
          "enum": [
            "overlay",
            "single"
          ]
        },
        "matterviz.defaults.trajectory.histogram_show_legend": {
          "type": "boolean",
          "default": true,
          "description": "Show legend in histogram plots"
        },
        "matterviz.defaults.trajectory.histogram_bin_count": {
          "type": "number",
          "default": 30,
          "description": "Number of bins for histogram plots",
          "minimum": 5,
          "maximum": 200
        },
        "matterviz.defaults.trajectory.scatter_line_width": {
          "type": "number",
          "default": 2,
          "description": "Line width for scatter plot connections",
          "minimum": 0.5,
          "maximum": 10
        },
        "matterviz.defaults.trajectory.scatter_point_size": {
          "type": "number",
          "default": 3,
          "description": "Point size for scatter plots",
          "minimum": 1,
          "maximum": 20
        },
        "matterviz.defaults.trajectory.scatter_show_legend": {
          "type": "boolean",
          "default": true,
          "description": "Show legend in scatter plots"
        },
        "matterviz.defaults.trajectory.plot_animation_duration": {
          "type": "number",
          "default": 200,
          "description": "Duration of plot animations in milliseconds",
          "minimum": 0,
          "maximum": 2000
        },
        "matterviz.defaults.trajectory.enable_plot_zoom": {
          "type": "boolean",
          "default": true,
          "description": "Enable zooming in plots"
        },
        "matterviz.defaults.trajectory.plot_zoom_factor": {
          "type": "number",
          "default": 1.5,
          "description": "Zoom factor for plot interactions",
          "minimum": 1.1,
          "maximum": 5
        },
        "matterviz.defaults.trajectory.auto_fit_plot_range": {
          "type": "boolean",
          "default": true,
          "description": "Automatically fit plot range to data"
        },
        "matterviz.defaults.trajectory.plot_grid_lines": {
          "type": "boolean",
          "default": true,
          "description": "Show grid lines in plots"
        },
        "matterviz.defaults.trajectory.plot_axis_labels": {
          "type": "boolean",
          "default": true,
          "description": "Show axis labels in plots"
        },
        "matterviz.defaults.trajectory.step_label_format": {
          "type": "string",
          "default": ".3~s",
          "description": "Number format for step labels (D3 format specifier)"
        },
        "matterviz.defaults.trajectory.property_value_format": {
          "type": "string",
          "default": ".2~s",
          "description": "Number format for property values (D3 format specifier)"
        },
        "matterviz.defaults.trajectory.tooltip_format": {
          "type": "string",
          "default": ".3~s",
          "description": "Number format for tooltips (D3 format specifier)"
        },
        "matterviz.defaults.trajectory.enable_keyboard_shortcuts": {
          "type": "boolean",
          "default": true,
          "description": "Enable keyboard shortcuts for playback"
        },
        "matterviz.defaults.trajectory.show_parsing_progress": {
          "type": "boolean",
          "default": true,
          "description": "Show progress indicator while parsing files"
        },
        "matterviz.defaults.trajectory.compact_controls": {
          "type": "boolean",
          "default": false,
          "description": "Use compact layout for playback controls"
        },
        "matterviz.defaults.trajectory.show_filename_in_controls": {
          "type": "boolean",
          "default": true,
          "description": "Display filename in control panel"
        },
        "matterviz.defaults.trajectory.enable_fullscreen": {
          "type": "boolean",
          "default": true,
          "description": "Allow fullscreen mode"
        },
        "matterviz.defaults.trajectory.smooth_playback": {
          "type": "boolean",
          "default": false,
          "description": "Use smooth interpolation between frames"
        },
        "matterviz.defaults.trajectory.loop_playback": {
          "type": "boolean",
          "default": true,
          "description": "Loop trajectory playback"
        },
        "matterviz.defaults.trajectory.pause_on_hover": {
          "type": "boolean",
          "default": false,
          "description": "Pause playback when hovering over controls"
        },
        "matterviz.defaults.trajectory.highlight_current_frame": {
          "type": "boolean",
          "default": true,
          "description": "Highlight current frame in timeline"
        },
        "matterviz.defaults.trajectory.show_frame_info": {
          "type": "boolean",
          "default": true,
          "description": "Show frame information overlay"
        },
        "matterviz.defaults.trajectory.max_frames_in_memory": {
          "type": "number",
          "default": 1000,
          "description": "Maximum frames to keep in memory",
          "minimum": 10,
          "maximum": 10000
        },
        "matterviz.defaults.trajectory.memory_usage_warning_threshold": {
          "type": "number",
          "default": 500,
          "description": "Frame count threshold for memory warnings",
          "minimum": 10,
          "maximum": 5000
        },
        "matterviz.defaults.trajectory.enable_performance_monitoring": {
          "type": "boolean",
          "default": false,
          "description": "Enable performance monitoring"
        },
        "matterviz.defaults.trajectory.prefetch_frames": {
          "type": "number",
          "default": 5,
          "description": "Number of frames to prefetch ahead",
          "minimum": 0,
          "maximum": 100
        },
        "matterviz.defaults.trajectory.cache_parsed_data": {
          "type": "boolean",
          "default": true,
          "description": "Cache parsed trajectory data"
        },
        "matterviz.defaults.composition.composition_mode": {
          "type": "string",
          "default": "pie",
          "description": "Display mode for composition data",
          "enum": [
            "pie",
            "bubble",
            "bar"
          ]
        },
        "matterviz.defaults.composition.composition_color_scheme": {
          "type": "string",
          "default": "Vesta",
          "description": "Color scheme for composition visualization",
          "enum": [
            "Vesta",
            "Jmol",
            "Alloy",
            "Pastel",
            "Muted",
            "Dark Mode"
          ]
        }
      }
    }
  },
  "scripts": {
    "sync-config": "deno run -A scripts/sync-config.ts",
    "prebuild": "pnpm sync-config",
    "build": "rm -rf dist && vite build --config vite.webview.config.ts && mkdir -p dist/src && cp -r ../../src/lib dist/src/lib/ && vite build",
    "package": "pnpm build && vsce package",
    "test": "vitest"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^6.1.0",
    "@types/node": "^24.0.14",
    "@types/vscode": "^1.96.0",
    "svelte": "^5.36.6",
    "typescript": "^5.8.3",
    "vite": "^7.0.5",
    "vitest": "^3.2.4"
  }
}
